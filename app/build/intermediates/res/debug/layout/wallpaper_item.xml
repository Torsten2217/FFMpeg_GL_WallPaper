<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/item_background"
    android:padding="4dp" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imageFavorite"
        android:layout_width="@dimen/favorite_button_width"
        android:layout_height="@dimen/favorite_button_height"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:src="@drawable/favourite_button" />

    <ImageView
        android:id="@+id/imageInstall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageFavorite"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/imageFavorite"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:src="@drawable/install_button" />

</RelativeLayout><!-- From: file:/D:/LWV/AS/ScreensProVAW/app/src/main/res/layout/wallpaper_item.xml -->